<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddMedicine">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="Wybierz typ zadania"
                    android:textSize="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/textView" android:layout_weight="1.1"/>
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="4">

                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1">
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/tablet"
                            android:id="@+id/tablet" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/capsule"
                            android:id="@+id/capsule" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/drops"
                            android:id="@+id/drops" android:layout_weight="1" android:onClick="typ"
                            android:visibility="visible"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1">
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/injection"
                            android:id="@+id/injection" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/ointment"
                            android:id="@+id/ointment" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/syrup"
                            android:id="@+id/syrup" android:layout_weight="1" android:onClick="typ"/>
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent"
                          android:layout_weight="1">
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/spoon"
                            android:id="@+id/spoon" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/spray"
                            android:id="@+id/spray" android:layout_weight="1" android:onClick="typ"/>
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent" app:srcCompat="@drawable/inhalator"
                            android:id="@+id/inhalator" android:layout_weight="1" android:onClick="typ"
                            android:visibility="visible"/>
                </TableRow>
            </TableLayout>
            <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="textPersonName"
                    android:textAlignment="center"
                    android:hint="Tytul zadania"
                    android:ems="10"
                    tools:layout_editor_absoluteY="205dp" tools:layout_editor_absoluteX="99dp" android:id="@+id/tytul"
                    android:layout_weight="1.1" android:contentDescription="Tytul zadania"/>

            <Button
                    android:text="dodaj czas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/add_time" android:layout_weight="1.1"
                    android:onClick="add_time"/>
            <GridView xmlns:android="http://schemas.android.com/apk/res/android"
                      android:id="@+id/gridview"
                      android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:numColumns="3"
                      android:verticalSpacing="2dp"
                      android:horizontalSpacing="2dp">

            </GridView>
            <Button
                    android:text="Dodaj"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/button" android:layout_weight="1.1"
                    android:onClick="add" style="@android:style/Widget.Button"/>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>